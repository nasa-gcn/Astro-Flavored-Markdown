{
  "name": "astro-flavored-markdown",
  "version": "1.0.0",
  "description": "A remark markdown dialect for astronomical bulletins",
  "main": "index.js",
  "files": [
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "prepare:husky": "husky install",
    "prepare:tsc": "tsc",
    "prepare": "run-p prepare:*",
    "test": "jest"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nasa-gcn/Astro-Flavored-Markdown.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/nasa-gcn/Astro-Flavored-Markdown/issues"
  },
  "homepage": "https://github.com/nasa-gcn/Astro-Flavored-Markdown#readme",
  "dependencies": {
    "prettier": "^2.8.1",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/jest": "^29.2.5",
    "@types/mdast": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "remark": "^14.0.2",
    "ts-jest": "^29.0.3"
  },
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      },
      {
        "files": "test*.ts",
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  }
}
